// C贸digo para la f贸rmula de combinaci贸n
#include <iostream>
using namespace std;

int main()
    {
    int n, r;
    long long factN = 1, factR = 1, factNR = 1;

    cout << "Ingrese n y r para calcular C(n, r):";
    cin >> n >> r;

    if (r > n || n < 0 || r < 0)
    {
    cout << "Error: r debe ser menor o igual que n, y ambos deben ser positivos";
    return 1;
    }
    // Calculamos n!
    for (int i = 1; i <= n; i++)
    {
        factN *= i;
    }
    // Calculamos r!
    for (int i = 1; i <= r; i++)
    {
        factR *= i;
    }

    // Calculamos (n - r)!
    for (int i = 1; i <= (n - r); i++)
    {
        factNR *= i;
    }

    long long resultado = factN / (factR * factNR);

    cout << "Combinaci贸n C(" << n << ", " << r << ") = " << resultado << endl;

    return 0;
    }
