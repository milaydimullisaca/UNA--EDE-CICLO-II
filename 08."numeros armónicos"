#include <iostream>
using namespace std;
int main() 
{
    int n, i;
    cout << "Ingrese n: ";
    cin >> n;

    if (n <= 0)
    {
        cout << "Error n debe un numero entero positivo" << endl;
        return 1;
    }

        cout << "Los numeros armonicos son:" << endl;
        for (i = 1; i <= n; i++)
    {
        cout << "1/" << i;
        if (i < n) cout << " + ";
    }
    cout << endl;

    return 0;
}
