#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Ingrese n: ";
    cin >> n;

    if (n <= 0)
    {
        cout << "Error n debe ser un número entero positivo" << endl;
        return 1;
    }

        cout << "Los números triangulares son:";
        for (int i = 1; i <= n; i++) 
    {
        int tri = i * (i + 1) / 2;
        cout << tri;
        if (i < n)
    {
            cout << ", ";
    }
    }

    return 0;
}
