#include <iostream>
using namespace std;
int main() 
{
    int n, suma = 0, i = 1;
    cout << "Ingrese n ";
    cin >> n;
    if (n <= 0)
    {   cout << "Error n debe ser entero positivo" << endl;
    
        return 1;
    }
        cout << "La suma de los impares es: ";
        while (n > 0)
    {   cout << i;
        suma += i;
        i += 2;
        n--;
        if (n > 0) cout << " + ";
    }
    cout << " = " << suma << endl;

    return 0;
}
