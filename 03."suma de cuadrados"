#include <iostream>
using namespace std;
int main() 
{
    int i, n, suma = 0;
    cout << "Ingrese n: ";
    cin >> n;
    if (n <= 0)
    {
        cout << "Error n debe ser un nÃºmero entero positivo" << endl;
        return 1; 
    }
    cout << "La suma de los cuadrados ";
    for (i = 1; i <= n; i++)
    {
        cout << i << "^2";
        if (i < n) cout << " + ";
        suma += i * i;
    }
    cout << " = " << suma << endl;
    return 0;
}
